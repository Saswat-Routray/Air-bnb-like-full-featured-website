
<% layout("/layout/boilerplate.ejs") %>
<body>
    
    <div class="row">
        <div class="col-8 offset-2">
   
            <h3>Create new Listing</h3>
    <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data" >
        <div class="mb-3">
            <label for="title" class="form-lable">Title</label>
            <input type="text" name="listing[title]" class="form-control" required>
            <div class="valid-feedback">title looks good</div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-lable">Description</label>
            <textarea name="listing[description]" class="form-control" required >Say something about it</textarea>
            <div class="invalid-feedback">Enter valid description</div>
        </div>
        <div class="mb-3">
            <label for="image" class="form-lable">Upload image</label>
            <input type="file" name="listing[image]" class="form-control">
            required
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-lable">price</label>
                <input type="text" name="listing[price]" class="form-control" required>
                <div class="invalid-feedback">Enter valid Price</div>
            </div>
            <div class="mb-3 col-md-8">
                <label for="country"   class="form-lable">Country</label>
                <input type="text" name="listing[country]" class="form-control" required>
                <div class="invalid-feedback">Enter valid country</div>
            </div>

        </div>
        
        <div class="mb-3">
            <label for="location" class="form-lable">Location</label>
            <input type="text" name="listing[location]" class="form-control" required>
            <div class="invalid-feedback">Enter valid location</div>
        </div>
        <div class="mb-3 col-md-8">
            <label for="category"   class="form-lable">Category</label>
           
            <select id="category" name="listing[category]">
                <option value="Trending">Trending</option>
                <option value="Room">Room</option>
                <option value="Iconic Cities">Iconic Cities</option>
                <option value="Mountains">Mountains</option>
                <option value="Castles">Castles</option>
                <option value="Amazing Pools">Amazing Pools</option>
                <option value="Camping">Camping</option>
                <option value="Farms">Farms</option>
                <option value="Artict">Artict</option>
                <option value="Dome">Dome</option>
                <option value="Boats">Boats</option>
            </select>
            <div class="invalid-feedback">Enter valid category</div>
        </div>
        <br><br> 
        <button class="btn add-btn">Add</button>
    </form>
    <br>
    </div>
</div>

    
</body>


