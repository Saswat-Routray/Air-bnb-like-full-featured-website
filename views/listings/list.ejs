<% layout("layout/boilerplate.ejs") %>

<body>
    <h3 class="offset-3"><%= list.title %></h3>
    <div class="row mt-3">
    <div class="col-8 offset-1">
    
    <div class="card listing-card col-6 offset-2 show-card offset-3" style="width: 36rem;">
        <img src="<%= list.image %>" class="card-img-top show-img " alt="Listing-image">
        <div class="card-body">
          <p class="card-text">Owned by <i><%= list.owner.username %></i></p>
            
            <!-- <b><%= list.title %></b><br> -->
          <p class="card-text"> <%= list.description %></p>
          <p class="card-text">&#8377;<%= list.price.toLocaleString('en-IN') %></p>
          <p class="card-text"><%= list.location %></p>
          <p class="card-text"><%= list.country %></p>
         
        </div>
    </div>
  </div>
</div>

<div class="btns offset-3">   
            <form method="get" action="/listings/<%= list._id %>/edit">
            <button class="btn edit-btn btn-dark offset-1 ">Edit</button>
            </form>
            
            <form method="post" action="/listings/<%= list._id %>?_method=DELETE">
                <button class=" dlt-btn btn btn-dark   offset-4" >Delete </button>
            </form>
  </div>
<div class="col-8 offset-3 mb-3">  
<hr>
    <h4>Leave a Review</h4>
    <form method="POST" action="/listings/<%= list._id %>/reviews" novalidate class="needs-validation">
      <div class="mb-3 mt-3"> 
        <label for="rating" class="form-lable">Rating</label>
        <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
      </div>
      <div class="mb-3 mt-3">
        <label for="comment">Comments</label>
        <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required ></textarea>
        <div class="invalid-feedback">give some comment</div>
       </div>
       <button class="btn btn-dark">Submit</button>
    </form>
    <br>
    <br>
    <hr>
    <p><b>All reviews</b></p>
  <div class="row">
    <% for (review of list.reviews){ %>
    
      <div class="card col-5 mb-3 ms-4">
        <div class="card-body">
          <h6 class="card-title mt-1">John Doe</h6>
          <p class="card-text">
            <%= review.comment %>
          </p>
          <p class="card-text">
            <%= review.rating %> star
          </p>
            
        </div>
        <form action="/listings/<%= list._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
          <button class="btn btn-dark btn-sm mb-3 mt-2">Delete</button>
        </form>
      </div>
      
    <% } %>
  </div>
</div>
</body>
