
<% layout("/layout/boilerplate.ejs") %>

<body>


    <div class="row">
        <div class="col-8 offset-2">
            <h3>Edit your Listing</h3>
        <form method="post" action="/listings/<%= list._id %>?_method=PATCH" novalidate class="needs-validation">

        <div class="mb-3">
            <label for="title" class="form-lable">Title</label>
            <input type="text" name="listing[title]" class="form-control" value="<%= list.title %> " required>
            <div class="invalid-feedback">Enter title</div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-lable">Description</label>
            <textarea name="listing[description]" class="form-control" required><%= list.description %></textarea>
            <div class="invalid-feedback">Enter description</div>
        </div>
        <div class="mb-3">
            <label for="image" class="form-lable">Image</label>
            <input type="text" name="listing[image]" class="form-control" value="<%= list.image %>" required>
            <div class="invalid-feedback">Enter valid url</div>
        </div>

        <div class="row">
        <div class="mb-3 col-md-4">
            <label for="image" class="form-lable">price</label>
            <input type="text" name="listing[price]" class="form-control" value="<%= list.price %>" required>
            <div class="invalid-feedback">Enter Price</div>
        </div>
        <div class="mb-3 col-md-8">
            <label for="location" class="form-lable">Country</label>
            <input type="text" name="listing[country]" class="form-control" value="<%= list.country %>" required>
            <div class="invalid-feedback">Enter country</div>
        </div>
        </div>

        <div class="mb-3">
            <label for="location" class="form-lable">Location</label>
            <input type="text" name="listing[location]" class="form-control" value="<%= list.location %>" required>
            <div class="invalid-feedback">Enter location</div>
        </div>

        <button class="btn mt-3 btn-dark edit-btn">Edit</button>
        </form>
        </div>
</div>

</body>
    

